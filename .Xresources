##############
# Xft settings
##############

Xft.dpi:                    96
Xft.antialias:              true
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle:              hintslight

#################################
# Color settings (Solarized dark)
#################################

*background: #002b36
*foreground: #ffffff
!!*fading: 40
*fadeColor: #002b36
*cursorColor: #93a1a1
*pointerColorBackground: #586e75
*pointerColorForeground: #93a1a1

!! black dark/light
*color0: #073642
*color8: #657b83

!! red dark/light
*color1: #dc322f
*color9: #991b16

!! green dark/light
*color2: #859900
*color10: #226622

!! yellow dark/light
*color3: #b99935
*color11: #b58900

!! blue dark/light
*color4: #268bd2
*color12: #4444ff

!! magenta dark/light
*color5: #d33682
*color13: #b601b6

!! cyan dark/light
*color6: #53c1c1
*color14: #2aa198

!! white dark/light
*color7: #eee8d5
*color15: #fdf6e3


################
# URXVT settings
################

URxvt.depth:                32
URxvt.geometry:             90x30
URxvt.loginShell:           true
URxvt.internalBorder:       3
URxvt.lineSpace:            0

# transparency - true or false (default)
#URxvt*transparent: true

# tint with any color; i.e., blue, red, tomato4, olivedrab2, etc.
#   some nice listings are at:
#     http://www.nisrv.com/drupal/?q=node/11
#     http://www.htmlgoodies.com/tutorials/colors/article.php/3478921
#URxvt*tintColor: S_base03

# shading - 0 to 99 darkens, 101 to 200 lightens.
#   Don't use with tintColor; just use a darker or lighter color instead.
URxvt*shading: 15

URxvt*saveLines: 12000

URxvt*foreground: #f3f4f5
URxvt*background: #2f343f

URxvt*skipBuiltInGlyphs: true

URxvt*font:xft:Bitstream Vera Sans Mono:size=9, xft:Inconsolata\ for\ Powerline:size=9
URxvt*boldFont: xft:bitstream vera sans mono:bold:antialias=true
URxvt*letterSpace: 0

URxvt*scrollBar: true
URxvt*scrollBar_right: false
URxvt*scrollstyle: plain
